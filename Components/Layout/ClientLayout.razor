@inherits LayoutComponentBase
@rendermode InteractiveServer

<MudThemeProvider Theme="@theme" />
<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.h6" Style="flex-grow: 1;">Vikash Engineering Works Shop</MudText>
        <MudIconButton Icon="@Icons.Material.Filled.ShoppingCart" Color="Color.Inherit" />
        <MudIconButton Icon="@Icons.Material.Filled.AccountCircle" Color="Color.Inherit" />
    </MudAppBar>
    <MudDrawer @bind-Open="@drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavLink href="/" Match="NavLinkMatch.All">
            <MudNavLink Href="/" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
        </NavLink>
        <NavLink href="/products">
            <MudNavLink Href="/products" Icon="@Icons.Material.Filled.Store">Products</MudNavLink>
        </NavLink>
        <NavLink href="/services">
            <MudNavLink Href="/services" Icon="@Icons.Material.Filled.Build">Services</MudNavLink>
        </NavLink>
        <NavLink href="/about">
            <MudNavLink Href="/about" Icon="@Icons.Material.Filled.Info">About Us</MudNavLink>
        </NavLink>
        <NavLink href="/contact">
            <MudNavLink Href="/contact" Icon="@Icons.Material.Filled.ContactMail">Contact</MudNavLink>
        </NavLink>
        <MudDivider />
        <NavLink href="/admin/dashboard">
            <MudNavLink Href="/admin/dashboard" Icon="@Icons.Material.Filled.AdminPanelSettings">Admin</MudNavLink>
        </NavLink>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool drawerOpen = true;
    private MudTheme theme = new();

    private void ToggleDrawer()
    {
        drawerOpen = !drawerOpen;
    }
}

