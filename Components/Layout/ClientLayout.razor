@inherits LayoutComponentBase



<div class="min-h-screen bg-gray-50 text-slate-800 flex flex-col">
    <!-- Sub Navbar -->
    <div class="bg-slate-950 text-gray-400 text-[10px] sm:text-xs py-2 sm:py-2.5 border-b border-slate-800">
        <div class="container mx-auto px-3 sm:px-4 md:px-6">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-2 sm:gap-4 md:gap-6">
                <div class="flex flex-row justify-between items-center gap-3 sm:gap-4 md:gap-6 w-full sm:w-auto">
                    <a href="tel:+919876543210" class="flex items-center gap-1.5 sm:gap-2 hover:text-orange-500 transition duration-300 whitespace-nowrap flex-shrink-0">
                        <i class="fa-solid fa-phone text-orange-600 text-xs sm:text-sm"></i>
                        <span>+91 98765 43210</span>
                    </a>
                    <a href="mailto:info@vikashengineering.com" class="flex items-center gap-1.5 sm:gap-2 hover:text-orange-500 transition duration-300 flex-shrink-0">
                        <i class="fa-solid fa-envelope text-orange-600 text-xs sm:text-sm"></i>
                        <span class="sm:inline">info@vikashengineering.com</span>
                    </a>
                </div>
                <div class="flex flex-row justify-between items-center gap-3 sm:gap-4 md:gap-6 w-full sm:w-auto">
                    <span class="flex items-center gap-1.5 sm:gap-2 cursor-default whitespace-nowrap flex-shrink-0">
                        <i class="fa-solid fa-clock text-orange-600 text-xs sm:text-sm"></i>
                        <span class="text-[10px] sm:text-xs">Mon - Sat: 9:00 AM - 7:00 PM</span>
                    </span>
                    <div class="flex items-center gap-2 sm:gap-3 md:gap-4 sm:border-l sm:border-slate-700 sm:pl-4 md:pl-6 flex-shrink-0">
                        <a href="#" class="hover:text-orange-500 transition duration-300" aria-label="Facebook"><i class="fa-brands fa-facebook-f text-xs sm:text-sm"></i></a>
                        <a href="#" class="hover:text-orange-500 transition duration-300" aria-label="Twitter"><i class="fa-brands fa-twitter text-xs sm:text-sm"></i></a>
                        <a href="#" class="hover:text-orange-500 transition duration-300" aria-label="LinkedIn"><i class="fa-brands fa-linkedin-in text-xs sm:text-sm"></i></a>
                        <a href="#" class="hover:text-orange-500 transition duration-300" aria-label="Instagram"><i class="fa-brands fa-instagram text-xs sm:text-sm"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Navbar -->
    <nav class="bg-slate-900 text-white sticky top-0 z-50 shadow-lg border-b border-orange-600/30">
        <div class="container mx-auto px-6 py-4 flex justify-between items-center relative">
            <div class="flex items-center gap-3">
                <div class="p-2 rounded text-white w-10 h-10 md:w-12 md:h-12">
                    <img src="/img/logo/logo.png" alt="Vikash Engineering Works Logo" class="w-full h-full object-contain" />
                </div>
                <NavLink href="/" class="text-lg md:text-xl font-bold tracking-wide uppercase">Vikash Eng. Work Shop</NavLink>
            </div>
                    
            <!-- Desktop Menu -->
            <div class="hidden md:flex items-center gap-8 text-sm font-semibold tracking-wide absolute left-1/2 -translate-x-1/2">
                <NavLink href="/" Match="NavLinkMatch.All" class="text-white hover:text-orange-500 transition duration-300">Home</NavLink>
                <NavLink href="/services" class="text-gray-300 hover:text-orange-500 transition duration-300">Services</NavLink>
                <NavLink href="/products" class="text-gray-300 hover:text-orange-500 transition duration-300">Products</NavLink>
                <NavLink href="/about" class="text-gray-300 hover:text-orange-500 transition duration-300">About</NavLink>
            </div>

            <!-- Icons -->
            @*  <div class="flex items-center gap-5">
                <button class="text-gray-300 hover:text-orange-500 transition relative">
                    <i class="fa-solid fa-cart-shopping text-lg"></i>
                    <span class="absolute -top-2 -right-2 bg-orange-600 text-white text-xs rounded-full w-4 h-4 flex items-center justify-center">2</span>
                </button>
                <button class="text-gray-300 hover:text-orange-500 transition"><i class="fa-solid fa-user text-lg"></i></button>
            </div> *@
        </div>
    </nav>


    <!-- Main Content -->
    <main class="flex-grow pb-20 md:pb-0">
        @Body
    </main>

    <!-- Mobile Bottom Navigation Bar (shown on small screens) -->
    <nav class="md:hidden fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 shadow-lg z-50">
        <div class="flex items-center justify-around h-16">
            <NavLink href="/" Match="NavLinkMatch.All" class="flex flex-col items-center justify-center flex-1 h-full text-orange-600">
                <i class="fa-solid fa-home text-xl mb-1"></i>
                <span class="text-xs font-medium">Home</span>
            </NavLink>
            <NavLink href="/services" class="flex flex-col items-center justify-center flex-1 h-full text-gray-600 hover:text-orange-600 transition-colors">
                <i class="fa-solid fa-wrench text-xl mb-1"></i>
                <span class="text-xs font-medium">Services</span>
            </NavLink>
            <NavLink href="/products" class="flex flex-col items-center justify-center flex-1 h-full text-gray-600 hover:text-orange-600 transition-colors">
                <i class="fa-solid fa-industry text-xl mb-1"></i>
                <span class="text-xs font-medium">Products</span>
            </NavLink>
            <NavLink href="/about" class="flex flex-col items-center justify-center flex-1 h-full text-gray-600 hover:text-orange-600 transition-colors">
                <i class="fa-solid fa-info-circle text-xl mb-1"></i>
                <span class="text-xs font-medium">About</span>
            </NavLink>
        </div>
    </nav>

    <!-- Footer -->
    <footer class="bg-slate-900 text-gray-400 py-8 sm:py-10 md:py-12 border-t border-slate-800">
        <div class="container mx-auto px-4 sm:px-6">
            <div class="grid grid-cols-1 sm:grid-cols-4 lg:grid-cols-4 gap-6 sm:gap-8 mb-6 sm:mb-8">
                <div class="col-span-2 sm:col-span-2 lg:col-span-1">
                    <div class="flex items-center gap-2 text-white mb-3 sm:mb-4">
                        <i class="fa-solid fa-gears text-orange-500 text-lg sm:text-xl"></i>
                        <span class="text-base sm:text-lg font-bold">Vikash Eng. Works</span>
                    </div>
                    <p class="text-xs sm:text-sm leading-relaxed text-gray-400">
                        Precision engineering for a modern world. Building the tools that build the future.
                    </p>
                </div>
                <div>
                    <h4 class="text-white font-bold mb-3 sm:mb-4 text-sm sm:text-base">Quick Links</h4>
                    <ul class="space-y-1.5 sm:space-y-2 text-xs sm:text-sm">
                        <li><NavLink href="/" class="text-blue-400 hover:text-orange-500 transition">Home</NavLink></li>
                        <li><NavLink href="/about" class="text-blue-400 hover:text-orange-500 transition">About Us</NavLink></li>
                        <li><NavLink href="/services" class="text-blue-400 hover:text-orange-500 transition">Services</NavLink></li>
                        <li><NavLink href="/contact" class="text-blue-400 hover:text-orange-500 transition">Contact</NavLink></li>
                    </ul>
                </div>
                <div>
                    <h4 class="text-white font-bold mb-3 sm:mb-4 text-sm sm:text-base">Services</h4>
                    <ul class="space-y-1.5 sm:space-y-2 text-xs sm:text-sm">
                        <li><a href="/services" class="text-blue-400 hover:text-orange-500 transition">CNC Machining</a></li>
                        <li><a href="/services" class="text-blue-400 hover:text-orange-500 transition">Fabrication</a></li>
                        <li><a href="/services" class="text-blue-400 hover:text-orange-500 transition">Maintenance</a></li>
                        <li><a href="/services" class="text-blue-400 hover:text-orange-500 transition">Consulting</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="text-white font-bold mb-3 sm:mb-4 text-sm sm:text-base">Contact</h4>
                    <ul class="space-y-1.5 sm:space-y-2 text-xs sm:text-sm">
                        <li class="flex items-start gap-2">
                            <i class="fa-solid fa-location-dot text-orange-500 mt-0.5 flex-shrink-0"></i>
                            <span class="text-gray-400">123 Industrial Area, City</span>
                        </li>
                        <li class="flex items-center gap-2">
                            <i class="fa-solid fa-phone text-orange-500 flex-shrink-0"></i>
                            <span class="text-gray-400">+91 98765 43210</span>
                        </li>
                        <li class="flex items-center gap-2">
                            <i class="fa-solid fa-envelope text-orange-500 flex-shrink-0"></i>
                            <span class="text-gray-400 break-all">info@vikashengineering.com</span>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="border-t border-slate-800 pt-6 sm:pt-8 text-center">
                <p class="text-xs sm:text-sm">&copy; 2024 Vikash Engineering Works Shop. All rights reserved.</p>
            </div>
        </div>
    </footer>
</div>

