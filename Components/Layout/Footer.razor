@rendermode InteractiveServer
@using VikashEngineeringWorksShop.Services
@inject LanguageService LanguageService
@implements IDisposable

<footer class="bg-slate-900 text-gray-400 py-8 sm:py-10 md:py-12 border-t border-slate-800">
    <div class="container mx-auto px-4 sm:px-6">
        <div class="grid grid-cols-1 sm:grid-cols-4 lg:grid-cols-4 gap-6 sm:gap-8 mb-6 sm:mb-8">
            <div class="col-span-2 sm:col-span-2 lg:col-span-1">
                <div class="flex items-center gap-2 text-white mb-3 sm:mb-4">
                    <i class="fa-solid fa-gears text-orange-500 text-lg sm:text-xl"></i>
                    <span class="text-base sm:text-lg font-bold">Vikash Eng. Works</span>
                </div>
                <p class="text-xs sm:text-sm leading-relaxed text-gray-400">
                    Precision engineering for a modern world. Building the tools that build the future.
                </p>
            </div>
            <div>
                <h4 class="text-white font-bold mb-3 sm:mb-4 text-sm sm:text-base">@Translations.Get("Quick Links", LanguageService.CurrentLanguage)</h4>
                <ul class="space-y-1.5 sm:space-y-2 text-xs sm:text-sm">
                    <li><NavLink href="/" class="text-blue-400 hover:text-orange-500 transition">@Translations.Get("Home", LanguageService.CurrentLanguage)</NavLink></li>
                    <li><NavLink href="/about" class="text-blue-400 hover:text-orange-500 transition">@Translations.Get("About Us", LanguageService.CurrentLanguage)</NavLink></li>
                    <li><NavLink href="/gallery" class="text-blue-400 hover:text-orange-500 transition">@Translations.Get("Gallery", LanguageService.CurrentLanguage)</NavLink></li>
                    <li><NavLink href="/services" class="text-blue-400 hover:text-orange-500 transition">@Translations.Get("Services", LanguageService.CurrentLanguage)</NavLink></li>
                    <li><NavLink href="/contact" class="text-blue-400 hover:text-orange-500 transition">@Translations.Get("Contact", LanguageService.CurrentLanguage)</NavLink></li>
                </ul>
            </div>
            <div>
                <h4 class="text-white font-bold mb-3 sm:mb-4 text-sm sm:text-base">@Translations.Get("Services", LanguageService.CurrentLanguage)</h4>
                <ul class="space-y-1.5 sm:space-y-2 text-xs sm:text-sm">
                    <li><a href="/services" class="text-blue-400 hover:text-orange-500 transition">@Translations.Get("CNC Machining", LanguageService.CurrentLanguage)</a></li>
                    <li><a href="/services" class="text-blue-400 hover:text-orange-500 transition">@Translations.Get("Fabrication", LanguageService.CurrentLanguage)</a></li>
                    <li><a href="/services" class="text-blue-400 hover:text-orange-500 transition">@Translations.Get("Maintenance", LanguageService.CurrentLanguage)</a></li>
                    <li><a href="/services" class="text-blue-400 hover:text-orange-500 transition">@Translations.Get("Consulting", LanguageService.CurrentLanguage)</a></li>
                </ul>
            </div>
            <div>
                <h4 class="text-white font-bold mb-3 sm:mb-4 text-sm sm:text-base">Contact</h4>
                <ul class="space-y-1.5 sm:space-y-2 text-xs sm:text-sm">
                    <li class="flex items-start gap-2">
                        <i class="fa-solid fa-location-dot text-orange-500 mt-0.5 flex-shrink-0"></i>
                        <span class="text-gray-400">123 Industrial Area, City</span>
                    </li>
                    <li class="flex items-center gap-2">
                        <i class="fa-solid fa-phone text-orange-500 flex-shrink-0"></i>
                        <span class="text-gray-400">+91 98765 43210</span>
                    </li>
                    <li class="flex items-center gap-2">
                        <i class="fa-solid fa-envelope text-orange-500 flex-shrink-0"></i>
                        <span class="text-gray-400 break-all">info@vikashengineering.com</span>
                    </li>
                </ul>
            </div>
        </div>            
        <div class="border-t border-slate-800 pt-6 sm:pt-8 text-center">
            <p class="text-xs sm:text-sm">&copy; 2024 Vikash Engineering Works Shop. All rights reserved.</p>
        </div>
    </div>
</footer>

@code {
    protected override void OnInitialized()
    {
        LanguageService.OnLanguageChanged += StateHasChanged;
    }

    public void Dispose()
    {
        LanguageService.OnLanguageChanged -= StateHasChanged;
    }
}
