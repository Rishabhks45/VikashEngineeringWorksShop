@page "/about"
@layout ClientLayout
@rendermode InteractiveServer

<PageTitle>About Us - Vikash Engineering Works Shop</PageTitle>

<MudText Typo="Typo.h4" GutterBottom="true">About Us</MudText>

<MudCard Elevation="3">
    <MudCardContent>
        <MudText Typo="Typo.h5" GutterBottom="true">Vikash Engineering Works Shop</MudText>
        <MudText GutterBottom="true">
            Vikash Engineering Works Shop is a leading provider of engineering solutions, committed to delivering excellence in every project.
            With years of experience in the industry, we have built a reputation for quality, reliability, and customer satisfaction.
        </MudText>
        <MudText Typo="Typo.h6" GutterBottom="true" Class="mt-4">Our Mission</MudText>
        <MudText>
            To provide high-quality engineering products and services that meet the diverse needs of our customers while maintaining
            the highest standards of quality and professionalism.
        </MudText>
        <MudText Typo="Typo.h6" GutterBottom="true" Class="mt-4">Our Values</MudText>
        <MudStack>
            <MudText>
                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Size="Size.Small" Color="Color.Success" /> Quality First
            </MudText>
            <MudText>
                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Size="Size.Small" Color="Color.Success" /> Customer Satisfaction
            </MudText>
            <MudText>
                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Size="Size.Small" Color="Color.Success" /> Innovation
            </MudText>
            <MudText>
                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Size="Size.Small" Color="Color.Success" /> Integrity
            </MudText>
        </MudStack>
    </MudCardContent>
</MudCard>
