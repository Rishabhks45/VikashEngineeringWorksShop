@page "/admin/dashboard"
@layout AdminLayout
@rendermode InteractiveServer

<PageTitle>Admin Dashboard - Vikash Engineering Works Shop</PageTitle>

<MudText Typo="Typo.h4" GutterBottom="true">Admin Dashboard</MudText>

<MudGrid>
    <MudItem xs="12" sm="6" md="3">
        <MudCard Elevation="2">
            <MudCardContent>
                <MudText Typo="Typo.h6">Total Orders</MudText>
                <MudText Typo="Typo.h4" Color="Color.Primary">0</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="12" sm="6" md="3">
        <MudCard Elevation="2">
            <MudCardContent>
                <MudText Typo="Typo.h6">Total Products</MudText>
                <MudText Typo="Typo.h4" Color="Color.Secondary">0</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="12" sm="6" md="3">
        <MudCard Elevation="2">
            <MudCardContent>
                <MudText Typo="Typo.h6">Total Customers</MudText>
                <MudText Typo="Typo.h4" Color="Color.Success">0</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="12" sm="6" md="3">
        <MudCard Elevation="2">
            <MudCardContent>
                <MudText Typo="Typo.h6">Revenue</MudText>
                <MudText Typo="Typo.h4" Color="Color.Info">₹0</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>

<MudGrid Class="mt-4">
    <MudItem xs="12">
        <MudCard Elevation="2">
            <MudCardContent>
                <MudText Typo="Typo.h6" GutterBottom="true">Recent Orders</MudText>
                <MudTable Items="@orders" Hover="true" Striped="true">
                    <HeaderContent>
                        <MudTh>Order ID</MudTh>
                        <MudTh>Customer</MudTh>
                        <MudTh>Date</MudTh>
                        <MudTh>Amount</MudTh>
                        <MudTh>Status</MudTh>
                    </HeaderContent>
                    <RowTemplate>
                        <MudTd DataLabel="Order ID">@context.OrderId</MudTd>
                        <MudTd DataLabel="Customer">@context.CustomerName</MudTd>
                        <MudTd DataLabel="Date">@context.OrderDate.ToShortDateString()</MudTd>
                        <MudTd DataLabel="Amount">₹@context.Amount</MudTd>
                        <MudTd DataLabel="Status">
                            <MudBadge Content="@context.Status" Color="Color.Success" />
                        </MudTd>
                    </RowTemplate>
                </MudTable>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>

@code {
    private List<Order> orders = new();

    protected override void OnInitialized()
    {
        // Sample data - replace with actual data from your service
        orders = new List<Order>
        {
            new Order { OrderId = "ORD-001", CustomerName = "Sample Customer", OrderDate = DateTime.Now, Amount = 5000, Status = "Pending" }
        };
    }

    private class Order
    {
        public string OrderId { get; set; } = string.Empty;
        public string CustomerName { get; set; } = string.Empty;
        public DateTime OrderDate { get; set; }
        public decimal Amount { get; set; }
        public string Status { get; set; } = string.Empty;
    }
}

