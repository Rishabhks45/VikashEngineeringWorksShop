@page "/admin/settings"
@layout AdminLayout
@rendermode InteractiveServer

<PageTitle>Settings - Vikash Engineering Works Shop</PageTitle>

<MudText Typo="Typo.h4" GutterBottom="true">Settings</MudText>

<MudCard Elevation="2">
    <MudCardContent>
        <MudText Typo="Typo.h6" GutterBottom="true">Application Settings</MudText>
        <MudTextField Label="Shop Name" Variant="Variant.Outlined" Value="@shopName" ValueChanged="@((string value) => shopName = value)" />
        <MudTextField Label="Email" Variant="Variant.Outlined" Value="@email" ValueChanged="@((string value) => email = value)" Class="mt-4" />
        <MudTextField Label="Phone" Variant="Variant.Outlined" Value="@phone" ValueChanged="@((string value) => phone = value)" Class="mt-4" />
        <MudTextField Label="Address" Variant="Variant.Outlined" Lines="3" Value="@address" ValueChanged="@((string value) => address = value)" Class="mt-4" />
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="mt-4">Save Settings</MudButton>
    </MudCardContent>
</MudCard>

@code {
    private string shopName = "Vikash Engineering Works Shop";
    private string email = "info@vikashengineering.com";
    private string phone = "+91-1234567890";
    private string address = "Your Address Here";
}

