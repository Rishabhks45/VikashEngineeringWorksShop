@page "/contact"
@layout ClientLayout
@rendermode InteractiveServer
@using VikashEngineeringWorksShop.Services
@using Microsoft.Extensions.Configuration
@inject LanguageService LanguageService
@inject HttpClient Http
@inject IConfiguration Configuration
@implements IDisposable

<PageTitle>@Translations.Get("Contact", LanguageService.CurrentLanguage) - @Translations.Get("Vikash Eng. Work Shop", LanguageService.CurrentLanguage)</PageTitle>

<div class="container mx-auto px-6 py-12 sm:py-16 md:py-20">
    <!-- Hero Section -->
    <div class="text-center mb-12 sm:mb-16">
        <div class="flex items-center justify-center gap-2 mb-4">
            <span class="w-12 h-[2px] bg-orange-600"></span>
            <h3 class="text-orange-600 font-bold uppercase tracking-wider text-sm">@Translations.Get("Get In Touch", LanguageService.CurrentLanguage)</h3>
            <span class="w-12 h-[2px] bg-orange-600"></span>
        </div>
        <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-slate-900 mb-6">@Translations.Get("Contact Us", LanguageService.CurrentLanguage)</h1>
        <p class="text-gray-600 text-lg max-w-3xl mx-auto">
            @Translations.Get("Have a question or need assistance? We're here to help. Reach out to us and we'll get back to you as soon as possible.", LanguageService.CurrentLanguage)
        </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12">
        <!-- Contact Form -->
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6 sm:p-8">
            <h2 class="text-2xl font-bold text-slate-900 mb-6">@Translations.Get("Send Us a Message", LanguageService.CurrentLanguage)</h2>
            <form @onsubmit="HandleSubmit" @onsubmit:preventDefault="true" class="space-y-5">
                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg flex items-center gap-2">
                        <i class="fa-solid fa-check-circle"></i>
                        <span>@successMessage</span>
                    </div>
                }
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg flex items-center gap-2">
                        <i class="fa-solid fa-exclamation-circle"></i>
                        <span>@errorMessage</span>
                    </div>
                }
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">@Translations.Get("Name", LanguageService.CurrentLanguage) <span class="text-orange-600">*</span></label>
                    <input type="text" @bind="name" disabled="@isSubmitting" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent transition disabled:opacity-50 disabled:cursor-not-allowed" placeholder="Your full name" />
                </div>
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">@Translations.Get("Email", LanguageService.CurrentLanguage) <span class="text-orange-600">*</span></label>
                    <input type="email" @bind="email" disabled="@isSubmitting" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent transition disabled:opacity-50 disabled:cursor-not-allowed" placeholder="your.email@example.com" />
                </div>
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">@Translations.Get("Phone", LanguageService.CurrentLanguage)</label>
                    <input type="tel" @bind="phone" disabled="@isSubmitting" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent transition disabled:opacity-50 disabled:cursor-not-allowed" placeholder="+91 98765 43210" />
                </div>
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">@Translations.Get("Subject", LanguageService.CurrentLanguage)</label>
                    <input type="text" @bind="subject" disabled="@isSubmitting" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent transition disabled:opacity-50 disabled:cursor-not-allowed" placeholder="What is this regarding?" />
                </div>
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">@Translations.Get("Message", LanguageService.CurrentLanguage) <span class="text-orange-600">*</span></label>
                    <textarea @bind="message" rows="5" disabled="@isSubmitting" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent transition resize-none disabled:opacity-50 disabled:cursor-not-allowed" placeholder="Tell us about your requirements..."></textarea>
                </div>
                <button type="submit" disabled="@isSubmitting" class="w-full bg-slate-900 hover:bg-orange-600 text-white font-bold py-3 px-6 rounded-lg shadow-lg transition-all duration-300 flex items-center justify-center gap-2 group disabled:opacity-50 disabled:cursor-not-allowed">
                    @if (isSubmitting)
                    {
                        <i class="fa-solid fa-spinner fa-spin"></i>
                        <span>@Translations.Get("Sending...", LanguageService.CurrentLanguage)</span>
                    }
                    else
                    {
                        <span>@Translations.Get("Send Message", LanguageService.CurrentLanguage)</span>
                        <i class="fa-solid fa-paper-plane group-hover:translate-x-1 transition-transform"></i>
                    }
                </button>
            </form>
        </div>

        <!-- Contact Information -->
        <div class="space-y-6">
            <!-- Contact Info Card -->
            <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6 sm:p-8">
                <h2 class="text-2xl font-bold text-slate-900 mb-6">@Translations.Get("Contact Information", LanguageService.CurrentLanguage)</h2>
                <div class="space-y-5">
                    <div class="flex items-start gap-4">
                        <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center flex-shrink-0">
                            <i class="fa-solid fa-location-dot text-orange-600 text-lg"></i>
                        </div>
                        <div>
                            <h3 class="font-semibold text-slate-900 mb-1">@Translations.Get("Address", LanguageService.CurrentLanguage)</h3>
                            <p class="text-gray-600">123 Industrial Area, City, State 123456</p>
                        </div>
                    </div>
                    <div class="flex items-start gap-4">
                        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                            <i class="fa-solid fa-phone text-blue-600 text-lg"></i>
                        </div>
                        <div>
                            <h3 class="font-semibold text-slate-900 mb-1">@Translations.Get("Phone", LanguageService.CurrentLanguage)</h3>
                            <a href="tel:+919876543210" class="text-gray-600 hover:text-orange-600 transition">+91 98765 43210</a>
                        </div>
                    </div>
                    <div class="flex items-start gap-4">
                        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0">
                            <i class="fa-solid fa-envelope text-green-600 text-lg"></i>
                        </div>
                        <div>
                            <h3 class="font-semibold text-slate-900 mb-1">@Translations.Get("Email", LanguageService.CurrentLanguage)</h3>
                            <a href="mailto:info@vikashengineering.com" class="text-gray-600 hover:text-orange-600 transition break-all">info@vikashengineering.com</a>
                        </div>
                    </div>
                    <div class="flex items-start gap-4">
                        <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center flex-shrink-0">
                            <i class="fa-solid fa-clock text-purple-600 text-lg"></i>
                        </div>
                        <div>
                            <h3 class="font-semibold text-slate-900 mb-1">@Translations.Get("Business Hours", LanguageService.CurrentLanguage)</h3>
                            <p class="text-gray-600">Mon - Sat: 9:00 AM - 7:00 PM</p>
                            <p class="text-gray-600 text-sm">Sunday: Closed</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Social Media Card -->
            <div class="bg-slate-900 rounded-2xl shadow-lg p-6 sm:p-8 text-white">
                <h2 class="text-2xl font-bold mb-4">@Translations.Get("Follow Us", LanguageService.CurrentLanguage)</h2>
                <p class="text-gray-300 mb-6">@Translations.Get("Stay connected with us on social media for updates and news.", LanguageService.CurrentLanguage)</p>
                <div class="flex items-center gap-4">
                    <a href="#" class="w-12 h-12 bg-white/10 hover:bg-orange-600 rounded-lg flex items-center justify-center transition" aria-label="Facebook">
                        <i class="fa-brands fa-facebook-f"></i>
                    </a>
                    <a href="#" class="w-12 h-12 bg-white/10 hover:bg-orange-600 rounded-lg flex items-center justify-center transition" aria-label="Twitter">
                        <i class="fa-brands fa-twitter"></i>
                    </a>
                    <a href="#" class="w-12 h-12 bg-white/10 hover:bg-orange-600 rounded-lg flex items-center justify-center transition" aria-label="LinkedIn">
                        <i class="fa-brands fa-linkedin-in"></i>
                    </a>
                    <a href="#" class="w-12 h-12 bg-white/10 hover:bg-orange-600 rounded-lg flex items-center justify-center transition" aria-label="Instagram">
                        <i class="fa-brands fa-instagram"></i>
                    </a>
                </div>
            </div>

            <!-- Map -->
            <div class="bg-gray-100 rounded-2xl shadow-lg overflow-hidden h-64">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d533.1855903435218!2d84.53906501465865!3d25.973588520176083!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3992eb6d8cb6e65d%3A0x6c337e245e14935!2sXGFQ%2BFM9%2C%20Ekma%20-%20Parsa%20Rd%2C%20Bihar%20841208!5e0!3m2!1sen!2sin!4v1764571903788!5m2!1sen!2sin"
                    class="w-full h-full border-0" 
                    allowfullscreen="" 
                    loading="lazy" 
                    referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </div>
        </div>
    </div>
</div>

@code {
    private string name = string.Empty;
    private string email = string.Empty;
    private string phone = string.Empty;
    private string subject = string.Empty;
    private string message = string.Empty;
    private bool isSubmitting = false;
    private string successMessage = string.Empty;
    private string errorMessage = string.Empty;

    protected override void OnInitialized()
    {
        LanguageService.OnLanguageChanged += StateHasChanged;
    }

    private async Task HandleSubmit()
    {
        // Clear previous messages
        successMessage = string.Empty;
        errorMessage = string.Empty;

        // Validation
        if (string.IsNullOrWhiteSpace(name))
        {
            errorMessage = Translations.Get("Please enter your name.", LanguageService.CurrentLanguage);
            return;
        }

        if (string.IsNullOrWhiteSpace(email) || !email.Contains("@"))
        {
            errorMessage = Translations.Get("Please enter a valid email address.", LanguageService.CurrentLanguage);
            return;
        }

        if (string.IsNullOrWhiteSpace(message))
        {
            errorMessage = Translations.Get("Please enter your message.", LanguageService.CurrentLanguage);
            return;
        }

        isSubmitting = true;
        StateHasChanged();

        try
        {
            var googleAppsScriptUrl = Configuration["GoogleAppsScript:WebAppUrl"];
            
            if (string.IsNullOrEmpty(googleAppsScriptUrl))
            {
                errorMessage = Translations.Get("Configuration error. Please contact the administrator.", LanguageService.CurrentLanguage);
                isSubmitting = false;
                StateHasChanged();
                return;
            }

            var formData = new
            {
                name = name.Trim(),
                email = email.Trim(),
                phone = string.IsNullOrWhiteSpace(phone) ? "" : phone.Trim(),
                subject = string.IsNullOrWhiteSpace(subject) ? "" : subject.Trim(),
                message = message.Trim(),
                timestamp = DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")
            };

            var response = await Http.PostAsJsonAsync(googleAppsScriptUrl, formData);
            var responseContent = await response.Content.ReadAsStringAsync();

            if (response.IsSuccessStatusCode)
            {
                // Try to parse the response to check if Google Apps Script returned success
                try
                {
                    var jsonResponse = System.Text.Json.JsonSerializer.Deserialize<System.Text.Json.JsonElement>(responseContent);
                    if (jsonResponse.TryGetProperty("success", out var success) && success.GetBoolean())
                    {
                        successMessage = Translations.Get("Thank you! Your message has been sent successfully. We'll get back to you soon.", LanguageService.CurrentLanguage);
                        // Clear form
                        name = string.Empty;
                        email = string.Empty;
                        phone = string.Empty;
                        subject = string.Empty;
                        message = string.Empty;
                    }
                    else if (jsonResponse.TryGetProperty("message", out var errorMsg))
                    {
                        errorMessage = $"Error: {errorMsg.GetString()}";
                        Console.WriteLine($"Google Apps Script error: {responseContent}");
                    }
                }
                catch
                {
                    // If response parsing fails, assume success (some Google Apps Script responses might not be JSON)
                    successMessage = Translations.Get("Thank you! Your message has been sent successfully. We'll get back to you soon.", LanguageService.CurrentLanguage);
                    name = string.Empty;
                    email = string.Empty;
                    phone = string.Empty;
                    subject = string.Empty;
                    message = string.Empty;
                }
            }
            else
            {
                errorMessage = $"Error: {response.StatusCode}. Response: {responseContent}";
                Console.WriteLine($"Contact form submission failed. Status: {response.StatusCode}, Response: {responseContent}");
            }
        }
        catch (Exception ex)
        {
            errorMessage = Translations.Get("Sorry, there was an error sending your message. Please try again later.", LanguageService.CurrentLanguage);
            // Log error in production
            Console.WriteLine($"Error submitting contact form: {ex.Message}");
        }
        finally
        {
            isSubmitting = false;
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        LanguageService.OnLanguageChanged -= StateHasChanged;
    }
}
