@page "/"
@layout ClientLayout
@rendermode InteractiveServer
@using VikashEngineeringWorksShop.Services
@inject LanguageService LanguageService
@implements IDisposable

<PageTitle>@Translations.Get("Home", LanguageService.CurrentLanguage) - @Translations.Get("Vikash Eng. Work Shop", LanguageService.CurrentLanguage)</PageTitle>

<style>
    .hero-bg {
        background-color: #0f172a;
        background-image: linear-gradient(rgba(15, 23, 42, 0.85), rgba(15, 23, 42, 0.7)), url('/Img/Hero Bg.png');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
    }
    h1, h2, h3 {
        font-family: 'Montserrat', sans-serif;
    }
</style>

<!-- Hero Section -->
<header class="hero-bg h-[550px] flex items-center justify-center text-center px-6 relative overflow-hidden">
    <!-- Decorative industrial element -->
    <div class="absolute bottom-0 left-0 w-full h-1 bg-orange-600"></div>

    <div class="max-w-4xl relative z-10">
        <div class="inline-block px-3 py-1 mb-4 border border-orange-500/50 rounded-full bg-slate-900/50 backdrop-blur-sm">
            <span class="text-orange-400 text-xs font-bold uppercase tracking-widest">@Translations.Get("Premium Industrial Solutions", LanguageService.CurrentLanguage)</span>
        </div>
        <h1 class="text-4xl md:text-6xl text-white font-extrabold mb-6 uppercase tracking-wider leading-tight">
            @Translations.Get("Engineering", LanguageService.CurrentLanguage) <br class="md:hidden" /> <span class="text-transparent bg-clip-text bg-gradient-to-r from-orange-400 to-orange-600">@Translations.Get("Excellence", LanguageService.CurrentLanguage)</span>
        </h1>
        <p class="text-gray-300 text-lg md:text-xl mb-10 font-light max-w-2xl mx-auto">
            @Translations.Get("We provide high-quality machinery, precision tools, and custom fabrication services tailored to your industrial needs.", LanguageService.CurrentLanguage)
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/products" class="bg-orange-600 hover:bg-orange-700 text-white font-bold py-3 px-8 rounded shadow-lg shadow-orange-600/20 transition transform hover:-translate-y-1 hover:shadow-orange-600/40">
                @Translations.Get("View Catalog", LanguageService.CurrentLanguage)
            </a>
            <a href="/contact" class="group bg-transparent border-2 border-white text-white hover:bg-white hover:text-slate-900 font-bold py-3 px-8 rounded shadow-lg transition flex items-center justify-center gap-2">
                <span>@Translations.Get("Contact Us", LanguageService.CurrentLanguage)</span>
                <i class="fa-solid fa-arrow-right group-hover:translate-x-1 transition-transform"></i>
            </a>
        </div>
    </div>
</header>

<!-- Main Content Container -->
<div class="container mx-auto px-6 py-20">

    <!-- About Section -->
    <section id="about" class="mb-24 flex flex-col md:flex-row items-center gap-12 lg:gap-20">
        <div class="md:w-1/2 relative group">
            <div class="absolute -inset-2 bg-gradient-to-r from-orange-600 to-blue-600 rounded-lg blur opacity-25 group-hover:opacity-40 transition duration-1000 group-hover:duration-200"></div>
            <div class="relative">
                <img src="https://images.unsplash.com/photo-1531834685032-c34bf0d84c77?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="Workshop" class="rounded-lg shadow-2xl w-full object-cover h-80 md:h-96">
                <div class="absolute -bottom-6 -right-6 bg-slate-900 text-white p-6 rounded-lg shadow-xl hidden md:block border-l-4 border-orange-500">
                    <p class="text-3xl font-bold text-orange-500">15+</p>
                    <p class="text-xs uppercase tracking-widest text-gray-400">@Translations.Get("Years of", LanguageService.CurrentLanguage)<br>@Translations.Get("Experience", LanguageService.CurrentLanguage)</p>
                </div>
            </div>
        </div>
        <div class="md:w-1/2">
            <div class="flex items-center gap-2 mb-4">
                <span class="w-8 h-[2px] bg-orange-600"></span>
                <h3 class="text-orange-600 font-bold uppercase tracking-wider text-sm">@Translations.Get("Who We Are", LanguageService.CurrentLanguage)</h3>
            </div>
            <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-6">@Translations.Get("Mastering the Art of Industrial Fabrication", LanguageService.CurrentLanguage)</h2>
            <p class="text-gray-600 leading-relaxed mb-6 text-lg">
                @Translations.Get("Vikash Engineering Works Shop is a pioneer in delivering top-tier engineering solutions. From heavy machinery to precision tools, we ensure that every project meets the highest industry standards of quality, safety, and durability.", LanguageService.CurrentLanguage)
            </p>
            <ul class="space-y-3 mb-8">
                <li class="flex items-center gap-3 text-slate-700">
                    <i class="fa-solid fa-circle-check text-green-500"></i> @Translations.Get("ISO 9001 Certified Quality", LanguageService.CurrentLanguage)
                </li>
                <li class="flex items-center gap-3 text-slate-700">
                    <i class="fa-solid fa-circle-check text-green-500"></i> @Translations.Get("24/7 Maintenance Support", LanguageService.CurrentLanguage)
                </li>
                <li class="flex items-center gap-3 text-slate-700">
                    <i class="fa-solid fa-circle-check text-green-500"></i> @Translations.Get("Custom Machinery Design", LanguageService.CurrentLanguage)
                </li>
            </ul>
            <a href="/about" class="inline-flex items-center gap-2 text-slate-900 font-bold hover:text-orange-600 transition group">
                @Translations.Get("Read Our Story", LanguageService.CurrentLanguage)
                <i class="fa-solid fa-arrow-right text-orange-500 group-hover:translate-x-1 transition-transform"></i>
            </a>
        </div>
    </section>

    <!-- Stats Section (Divider) -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-24 bg-white p-8 rounded-2xl shadow-sm border border-gray-100">
        <div class="text-center">
            <p class="text-3xl font-bold text-slate-900">500+</p>
            <p class="text-sm text-gray-500 mt-1">@Translations.Get("Projects Completed", LanguageService.CurrentLanguage)</p>
        </div>
        <div class="text-center">
            <p class="text-3xl font-bold text-slate-900">120+</p>
            <p class="text-sm text-gray-500 mt-1">@Translations.Get("Happy Clients", LanguageService.CurrentLanguage)</p>
        </div>
        <div class="text-center">
            <p class="text-3xl font-bold text-slate-900">50+</p>
            <p class="text-sm text-gray-500 mt-1">@Translations.Get("Expert Engineers", LanguageService.CurrentLanguage)</p>
        </div>
        <div class="text-center">
            <p class="text-3xl font-bold text-slate-900">15</p>
            <p class="text-sm text-gray-500 mt-1">@Translations.Get("Awards Won", LanguageService.CurrentLanguage)</p>
        </div>
    </div>

    <!-- Services & Products Cards -->
    <div class="grid md:grid-cols-2 gap-8 lg:gap-12">

        <!-- Services Card -->
        <div id="services" class="bg-white p-8 lg:p-10 rounded-2xl shadow-lg border border-gray-100 hover:shadow-2xl transition duration-300 group flex flex-col relative overflow-hidden">
            <!-- Hover Decoration -->
            <div class="absolute top-0 right-0 w-32 h-32 bg-blue-50 rounded-bl-full -mr-16 -mt-16 transition-transform group-hover:scale-150 duration-500 z-0"></div>

            <div class="relative z-10">
                <div class="w-16 h-16 bg-blue-100 rounded-xl flex items-center justify-center mb-6 group-hover:bg-blue-600 transition duration-300 shadow-sm">
                    <i class="fa-solid fa-wrench text-blue-600 text-2xl group-hover:text-white transition"></i>
                </div>
                <h3 class="text-2xl font-bold mb-3 text-slate-900">@Translations.Get("Our Services", LanguageService.CurrentLanguage)</h3>
                <p class="text-gray-600 mb-8 leading-relaxed">
                    @Translations.Get("We provide comprehensive maintenance, custom fabrication, CNC machining, and emergency repair solutions designed to keep your operations running smoothly.", LanguageService.CurrentLanguage)
                </p>

                <div class="mt-auto">
                    <a href="/services" class="block w-full py-4 rounded-xl border-2 border-blue-600 text-blue-700 font-bold hover:bg-blue-600 hover:text-white transition duration-300 flex items-center justify-center gap-2">
                        @Translations.Get("Explore Services", LanguageService.CurrentLanguage)
                    </a>
                </div>
            </div>
        </div>

        <!-- Products Card -->
        <div id="products" class="bg-white p-8 lg:p-10 rounded-2xl shadow-lg border border-gray-100 hover:shadow-2xl transition duration-300 group flex flex-col relative overflow-hidden">
            <!-- Hover Decoration -->
            <div class="absolute top-0 right-0 w-32 h-32 bg-orange-50 rounded-bl-full -mr-16 -mt-16 transition-transform group-hover:scale-150 duration-500 z-0"></div>

            <div class="relative z-10">
                <div class="w-16 h-16 bg-orange-100 rounded-xl flex items-center justify-center mb-6 group-hover:bg-orange-600 transition duration-300 shadow-sm">
                    <i class="fa-solid fa-industry text-orange-600 text-2xl group-hover:text-white transition"></i>
                </div>
                <h3 class="text-2xl font-bold mb-3 text-slate-900">@Translations.Get("Our Products", LanguageService.CurrentLanguage)</h3>
                <p class="text-gray-600 mb-8 leading-relaxed">
                    @Translations.Get("Browse our wide range of engineering products including heavy equipment, hydraulic systems, industrial gears, and a complete spare parts catalog.", LanguageService.CurrentLanguage)
                </p>

                <div class="mt-auto">
                    <a href="/products" class="block w-full py-4 rounded-xl bg-slate-900 text-white font-bold hover:bg-slate-800 hover:shadow-lg transition duration-300 flex items-center justify-center gap-2">
                        @Translations.Get("View Product Catalog", LanguageService.CurrentLanguage)
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>

@code {
    protected override void OnInitialized()
    {
        LanguageService.OnLanguageChanged += StateHasChanged;
    }

    public void Dispose()
    {
        LanguageService.OnLanguageChanged -= StateHasChanged;
    }
}
