@page "/not-found"
@layout ClientLayout

<div class="min-h-[60vh] flex items-center justify-center px-4 py-16">
    <div class="max-w-2xl w-full text-center">
        <!-- 404 Number -->
        <div class="mb-8">
            <h1 class="text-9xl md:text-[12rem] font-bold text-transparent bg-clip-text bg-gradient-to-r from-orange-500 to-orange-600 leading-none">
                404
            </h1>
        </div>

        <!-- Icon -->
        <div class="mb-6 flex justify-center">
            <div class="bg-orange-100 dark:bg-orange-900/20 rounded-full p-6">
                <i class="fa-solid fa-triangle-exclamation text-6xl text-orange-600"></i>
            </div>
        </div>

        <!-- Title -->
        <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">
            Page Not Found
        </h2>

        <!-- Description -->
        <p class="text-lg text-slate-600 mb-8 max-w-md mx-auto">
            Oops! The page you're looking for seems to have wandered off. It might have been moved, deleted, or never existed.
        </p>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
            <NavLink href="/" class="inline-flex items-center gap-2 bg-orange-600 hover:bg-orange-700 text-white font-semibold px-8 py-3 rounded-lg transition duration-300 shadow-lg hover:shadow-xl">
                <i class="fa-solid fa-home"></i>
                <span>Go to Homepage</span>
            </NavLink>
            <button onclick="window.history.back()" class="inline-flex items-center gap-2 bg-slate-200 hover:bg-slate-300 text-slate-800 font-semibold px-8 py-3 rounded-lg transition duration-300">
                <i class="fa-solid fa-arrow-left"></i>
                <span>Go Back</span>
            </button>
        </div>

        <!-- Additional Links -->
        <div class="mt-12 pt-8 border-t border-slate-200">
            <p class="text-sm text-slate-500 mb-4">You might be looking for:</p>
            <div class="flex flex-wrap justify-center gap-4 text-sm">
                <NavLink href="/" class="text-orange-600 hover:text-orange-700 hover:underline transition">Home</NavLink>
                <NavLink href="/services" class="text-orange-600 hover:text-orange-700 hover:underline transition">Services</NavLink>
                <NavLink href="/products" class="text-orange-600 hover:text-orange-700 hover:underline transition">Products</NavLink>
                <NavLink href="/about" class="text-orange-600 hover:text-orange-700 hover:underline transition">About</NavLink>
            </div>
        </div>
    </div>
</div>