@page "/services"
@layout ClientLayout
@rendermode InteractiveServer

<PageTitle>Services - Vikash Engineering Works Shop</PageTitle>

<MudText Typo="Typo.h4" GutterBottom="true">Our Services</MudText>

<MudGrid>
    <MudItem xs="12" md="6">
        <MudCard Elevation="3">
            <MudCardContent>
                <MudIcon Icon="@Icons.Material.Filled.Build" Size="Size.Large" Color="Color.Primary" />
                <MudText Typo="Typo.h5" GutterBottom="true">Engineering Solutions</MudText>
                <MudText>Comprehensive engineering solutions tailored to your needs.</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="12" md="6">
        <MudCard Elevation="3">
            <MudCardContent>
                <MudIcon Icon="@Icons.Material.Filled.Settings" Size="Size.Large" Color="Color.Primary" />
                <MudText Typo="Typo.h5" GutterBottom="true">Maintenance & Repair</MudText>
                <MudText>Expert maintenance and repair services for all engineering equipment.</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="12" md="6">
        <MudCard Elevation="3">
            <MudCardContent>
                <MudIcon Icon="@Icons.Material.Filled.Construction" Size="Size.Large" Color="Color.Primary" />
                <MudText Typo="Typo.h5" GutterBottom="true">Custom Fabrication</MudText>
                <MudText>Custom fabrication services for specialized engineering requirements.</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="12" md="6">
        <MudCard Elevation="3">
            <MudCardContent>
                <MudIcon Icon="@Icons.Material.Filled.Support" Size="Size.Large" Color="Color.Primary" />
                <MudText Typo="Typo.h5" GutterBottom="true">Consultation</MudText>
                <MudText>Expert consultation services for your engineering projects.</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>
