@page "/services"
@layout ClientLayout
@rendermode InteractiveServer
@using VikashEngineeringWorksShop.Services
@inject LanguageService LanguageService
@implements IDisposable

<PageTitle>@Translations.Get("Services", LanguageService.CurrentLanguage) - @Translations.Get("Vikash Eng. Work Shop", LanguageService.CurrentLanguage)</PageTitle>

<div class="container mx-auto px-6 py-12 sm:py-16 md:py-20">
    <!-- Hero Section -->
    <div class="text-center mb-12 sm:mb-16">
        <div class="flex items-center justify-center gap-2 mb-4">
            <span class="w-12 h-[2px] bg-orange-600"></span>
            <h3 class="text-orange-600 font-bold uppercase tracking-wider text-sm">@Translations.Get("Our Services", LanguageService.CurrentLanguage)</h3>
            <span class="w-12 h-[2px] bg-orange-600"></span>
        </div>
        <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-slate-900 mb-6">@Translations.Get("Comprehensive Engineering Solutions", LanguageService.CurrentLanguage)</h1>
        <p class="text-gray-600 text-lg max-w-3xl mx-auto">
            @Translations.Get("We provide comprehensive maintenance, custom fabrication, CNC machining, and emergency repair solutions designed to keep your operations running smoothly.", LanguageService.CurrentLanguage)
        </p>
    </div>

    <!-- Services Grid -->
    <div class="grid sm:grid-cols-2 lg:grid-cols-2 gap-6 lg:gap-8 mb-16">
        <!-- Service 1 -->
        <div class="bg-white p-8 lg:p-10 rounded-2xl shadow-lg border border-gray-100 hover:shadow-2xl transition duration-300 group flex flex-col relative overflow-hidden">
            <div class="absolute top-0 right-0 w-32 h-32 bg-blue-50 rounded-bl-full -mr-16 -mt-16 transition-transform group-hover:scale-150 duration-500 z-0"></div>
            <div class="relative z-10">
                <div class="w-16 h-16 bg-blue-100 rounded-xl flex items-center justify-center mb-6 group-hover:bg-blue-600 transition duration-300 shadow-sm">
                    <i class="fa-solid fa-wrench text-blue-600 text-2xl group-hover:text-white transition"></i>
                </div>
                <h2 class="text-2xl font-bold mb-3 text-slate-900">@Translations.Get("CNC Machining", LanguageService.CurrentLanguage)</h2>
                <p class="text-gray-600 mb-6 leading-relaxed">
                    @Translations.Get("Precision CNC machining services for complex parts and components. Our state-of-the-art equipment ensures accuracy and consistency in every project.", LanguageService.CurrentLanguage)
                </p>
                <ul class="space-y-2 mb-6 text-sm text-gray-600">
                    <li class="flex items-center gap-2">
                        <i class="fa-solid fa-check text-green-500"></i>
                        <span>@Translations.Get("3-Axis & 5-Axis Machining", LanguageService.CurrentLanguage)</span>
                    </li>
                    <li class="flex items-center gap-2">
                        <i class="fa-solid fa-check text-green-500"></i>
                        <span>@Translations.Get("Prototype Development", LanguageService.CurrentLanguage)</span>
                    </li>
                    <li class="flex items-center gap-2">
                        <i class="fa-solid fa-check text-green-500"></i>
                        <span>@Translations.Get("Quality Assurance", LanguageService.CurrentLanguage)</span>
                    </li>
                </ul>
                <button class="w-full py-3 rounded-xl border-2 border-blue-600 text-blue-700 font-bold hover:bg-blue-600 hover:text-white transition duration-300">
                    @Translations.Get("Learn More", LanguageService.CurrentLanguage)
                </button>
            </div>
        </div>

        <!-- Service 2 -->
        <div class="bg-white p-8 lg:p-10 rounded-2xl shadow-lg border border-gray-100 hover:shadow-2xl transition duration-300 group flex flex-col relative overflow-hidden">
            <div class="absolute top-0 right-0 w-32 h-32 bg-orange-50 rounded-bl-full -mr-16 -mt-16 transition-transform group-hover:scale-150 duration-500 z-0"></div>
            <div class="relative z-10">
                <div class="w-16 h-16 bg-orange-100 rounded-xl flex items-center justify-center mb-6 group-hover:bg-orange-600 transition duration-300 shadow-sm">
                    <i class="fa-solid fa-hammer text-orange-600 text-2xl group-hover:text-white transition"></i>
                </div>
                <h2 class="text-2xl font-bold mb-3 text-slate-900">@Translations.Get("Custom Fabrication", LanguageService.CurrentLanguage)</h2>
                <p class="text-gray-600 mb-6 leading-relaxed">
                    @Translations.Get("Custom fabrication services for specialized engineering requirements. From design to completion, we handle projects of all sizes.", LanguageService.CurrentLanguage)
                </p>
                <ul class="space-y-2 mb-6 text-sm text-gray-600">
                    <li class="flex items-center gap-2">
                        <i class="fa-solid fa-check text-green-500"></i>
                        <span>@Translations.Get("Metal Fabrication", LanguageService.CurrentLanguage)</span>
                    </li>
                    <li class="flex items-center gap-2">
                        <i class="fa-solid fa-check text-green-500"></i>
                        <span>@Translations.Get("Welding Services", LanguageService.CurrentLanguage)</span>
                    </li>
                    <li class="flex items-center gap-2">
                        <i class="fa-solid fa-check text-green-500"></i>
                        <span>@Translations.Get("Custom Design", LanguageService.CurrentLanguage)</span>
                    </li>
                </ul>
                <button class="w-full py-3 rounded-xl border-2 border-orange-600 text-orange-700 font-bold hover:bg-orange-600 hover:text-white transition duration-300">
                    @Translations.Get("Learn More", LanguageService.CurrentLanguage)
                </button>
            </div>
        </div>

        <!-- Service 3 -->
        <div class="bg-white p-8 lg:p-10 rounded-2xl shadow-lg border border-gray-100 hover:shadow-2xl transition duration-300 group flex flex-col relative overflow-hidden">
            <div class="absolute top-0 right-0 w-32 h-32 bg-green-50 rounded-bl-full -mr-16 -mt-16 transition-transform group-hover:scale-150 duration-500 z-0"></div>
            <div class="relative z-10">
                <div class="w-16 h-16 bg-green-100 rounded-xl flex items-center justify-center mb-6 group-hover:bg-green-600 transition duration-300 shadow-sm">
                    <i class="fa-solid fa-tools text-green-600 text-2xl group-hover:text-white transition"></i>
                </div>
                <h2 class="text-2xl font-bold mb-3 text-slate-900">@Translations.Get("Maintenance & Repair", LanguageService.CurrentLanguage)</h2>
                <p class="text-gray-600 mb-6 leading-relaxed">
                    @Translations.Get("Expert maintenance and repair services for all engineering equipment. 24/7 support to keep your operations running smoothly.", LanguageService.CurrentLanguage)
                </p>
                <ul class="space-y-2 mb-6 text-sm text-gray-600">
                    <li class="flex items-center gap-2">
                        <i class="fa-solid fa-check text-green-500"></i>
                        <span>@Translations.Get("Preventive Maintenance", LanguageService.CurrentLanguage)</span>
                    </li>
                    <li class="flex items-center gap-2">
                        <i class="fa-solid fa-check text-green-500"></i>
                        <span>@Translations.Get("Emergency Repairs", LanguageService.CurrentLanguage)</span>
                    </li>
                    <li class="flex items-center gap-2">
                        <i class="fa-solid fa-check text-green-500"></i>
                        <span>@Translations.Get("24/7 Support", LanguageService.CurrentLanguage)</span>
                    </li>
                </ul>
                <button class="w-full py-3 rounded-xl border-2 border-green-600 text-green-700 font-bold hover:bg-green-600 hover:text-white transition duration-300">
                    @Translations.Get("Learn More", LanguageService.CurrentLanguage)
                </button>
            </div>
        </div>

        <!-- Service 4 -->
        <div class="bg-white p-8 lg:p-10 rounded-2xl shadow-lg border border-gray-100 hover:shadow-2xl transition duration-300 group flex flex-col relative overflow-hidden">
            <div class="absolute top-0 right-0 w-32 h-32 bg-purple-50 rounded-bl-full -mr-16 -mt-16 transition-transform group-hover:scale-150 duration-500 z-0"></div>
            <div class="relative z-10">
                <div class="w-16 h-16 bg-purple-100 rounded-xl flex items-center justify-center mb-6 group-hover:bg-purple-600 transition duration-300 shadow-sm">
                    <i class="fa-solid fa-user-tie text-purple-600 text-2xl group-hover:text-white transition"></i>
                </div>
                <h2 class="text-2xl font-bold mb-3 text-slate-900">@Translations.Get("Consultation", LanguageService.CurrentLanguage)</h2>
                <p class="text-gray-600 mb-6 leading-relaxed">
                    @Translations.Get("Expert consultation services for your engineering projects. Get professional advice and solutions tailored to your needs.", LanguageService.CurrentLanguage)
                </p>
                <ul class="space-y-2 mb-6 text-sm text-gray-600">
                    <li class="flex items-center gap-2">
                        <i class="fa-solid fa-check text-green-500"></i>
                        <span>@Translations.Get("Project Planning", LanguageService.CurrentLanguage)</span>
                    </li>
                    <li class="flex items-center gap-2">
                        <i class="fa-solid fa-check text-green-500"></i>
                        <span>@Translations.Get("Technical Advice", LanguageService.CurrentLanguage)</span>
                    </li>
                    <li class="flex items-center gap-2">
                        <i class="fa-solid fa-check text-green-500"></i>
                        <span>@Translations.Get("Cost Optimization", LanguageService.CurrentLanguage)</span>
                    </li>
                </ul>
                <button class="w-full py-3 rounded-xl border-2 border-purple-600 text-purple-700 font-bold hover:bg-purple-600 hover:text-white transition duration-300">
                    @Translations.Get("Learn More", LanguageService.CurrentLanguage)
                </button>
            </div>
        </div>
    </div>

    <!-- CTA Section -->
    <div class="bg-slate-900 text-white p-8 sm:p-12 rounded-2xl text-center">
        <h2 class="text-2xl sm:text-3xl font-bold mb-4">@Translations.Get("Ready to Get Started?", LanguageService.CurrentLanguage)</h2>
        <p class="text-gray-300 mb-8 max-w-2xl mx-auto">
            @Translations.Get("Contact us today to discuss your engineering needs and discover how we can help bring your project to life.", LanguageService.CurrentLanguage)
        </p>
        <a href="/contact" class="inline-block bg-orange-600 hover:bg-orange-700 text-white font-bold py-3 px-8 rounded-lg shadow-lg transition transform hover:-translate-y-1">
            @Translations.Get("Contact Us Now", LanguageService.CurrentLanguage)
        </a>
    </div>
</div>

@code {
    protected override void OnInitialized()
    {
        LanguageService.OnLanguageChanged += StateHasChanged;
    }

    public void Dispose()
    {
        LanguageService.OnLanguageChanged -= StateHasChanged;
    }
}
